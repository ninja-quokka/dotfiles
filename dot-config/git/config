[init]
  defaultBranch = main
[alias]
  co = checkout
  mr = !sh -c 'git fetch $1 merge-requests/$2/head:mr-$1-$2 && git checkout mr-$1-$2' -
  l = log --no-merges --oneline --graph --decorate
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[core]
  excludesfile = ~/.gitignore_global
  editor = nvim
[commit]
  gpgSign = false
  verbose = true
[safe]
  directory = *
  directory = .
[push]
  autoSetupRemote = true
[pull]
	rebase = true
[merge]
  conflictStyle = zdiff3
[diff]
  colorMoved = plain
  algorithm = histogram
  context = 10
  mnemonicPrefix = true
[gpg]
  format = openpgp
  program = gpg
[tag]
  forceSignAnnotated = false
  sort = version:refname
[gpg "ssh"]
  program = ssh-keygen
  allowedSignersFile =
[rerere]
  enabled = true
	autoupdate = true
[column]
  ui = auto
[branch]
  sort = -committerdate
[fetch]
  prune = true
  pruneTags = true
  all = true
[help]
  autocorrect = prompt
[rebase]
  autoSquash = true
  autoStash = true
  updateRefs = true

# vim: ft=gitconfig
